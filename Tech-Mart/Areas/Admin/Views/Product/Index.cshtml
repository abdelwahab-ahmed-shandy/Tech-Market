@model IEnumerable<Product>

@{
    ViewData["Title"] = "View Product";
}


@{
    var notification = TempData["Notifation"] as string;
    if (!string.IsNullOrEmpty(notification))
    {
        <div class="alert alert-success">
            @notification
        </div>
    }
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center p-4">
            <h2 class="m-0 fw-bold">All Products</h2>
            <a asp-area="Admin" asp-controller="product" asp-action="Create" class="btn btn-light fw-bold fs-5 px-4 py-2">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>

        <div class="card-body p-5">
            <table class="table table-hover table-bordered align-middle text-center fs-">
                <thead class="table-dark">
                    <tr>
                        <th class="fw-bold">Id</th>
                        <th class="fw-bold">Name</th>
                        <th class="fw-bold">Description</th>
                        <th class="fw-bold">Price</th>
                        <th class="fw-bold">Quntity</th>
                        <th class="fw-bold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Id</td>
                            <td class="fw-bold">@item.Name</td>
                            <td class="fw-bold text-truncate" style="max-width: 300px;">@item.Description</td>
                            <td class="fw-bold">@item.Price</td>
                            <td class="fw-bold">@item.Quntity</td>

                            
                            <td class="d-flex justify-content-center gap-3">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-lg rounded-pill px-4 py-2" aria-label="Edit Product">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-lg rounded-pill px-4 py-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>