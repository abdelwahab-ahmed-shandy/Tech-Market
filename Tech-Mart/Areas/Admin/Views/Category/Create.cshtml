@model Category
@{
    ViewData["Title"] = "Create Category";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create New Category</h3></div>
                            <div class="card-body">
                                <form method="Post" asp-area="Admin" asp-controller="Category" asp-action="Create">
                                    
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="Name" name="Name" type="text"  />
                                        <label for="Name">Name</label>
                                        <span class="text-danger" asp-validation-for="Name"></span>

                                    </div>

                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="Description" name="Description" type="text"  />
                                        <label for="Description">Description</label>
                                        <span class="text-danger" asp-validation-for="Description"></span>

                                    </div>

                                    <div class="mt-4 mb-0">
                                        <button type="submit" class="btn btn-primary btn-block">Add New Category</button>

                                    </div>
                                    
                                </form>

                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
